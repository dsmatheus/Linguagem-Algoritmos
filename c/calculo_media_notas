#include <stdio.h>
#include <stdlib.h>

int main(int argc, char *argv[]) {
	
	float vNota1, vNota2, vMedia;
	
	printf("Digite a primeira nota: "); scanf("%f", &vNota1);
	printf("Digite a segunda nota: "); scanf("%f", &vNota2);
	
	vMedia = (vNota1 + vNota2) / 2;
	
	printf("MEDIA = %.1f", vMedia);
	
	return 0;
}
