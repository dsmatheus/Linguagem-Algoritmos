#include <stdio.h>
#include <stdlib.h>

int main(int argc, char *argv[]) {
	
	int vA, vB, vC, vD, vP;
	
	printf("Digite o lado A: "); scanf("%i", &vA);
	printf("Digite o lado B: "); scanf("%i", &vB);
	printf("Digite o lado C: "); scanf("%i", &vC);
	printf("Digite o lado D: "); scanf("%i", &vD);
	
	vP = vA + vB + vC + vD;
	
	printf("\nRESULTADO = %i", vP);
	
	return 0;
}
